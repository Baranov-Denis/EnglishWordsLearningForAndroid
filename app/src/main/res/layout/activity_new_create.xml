<?xml version="1.0" encoding="utf-8"?>


  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".NewCreateActivity"
      android:orientation="vertical"
      >






  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:background="@color/yellow_dark"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/engl_sort"
        android:text="English â–¼"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"

        android:textColor="@color/white"
        android:paddingHorizontal="10dp"
        android:layout_weight="3"
        />

    <TextView
        android:id="@+id/rus_sort"
        android:text="Russian"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"

        android:textColor="@color/white"
        android:paddingHorizontal="10dp"
        android:layout_weight="3"
        />

    <TextView
        android:id="@+id/right_sort"
        android:text="right Sort"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"

        android:textColor="@color/white"
        android:paddingHorizontal="10dp"
        android:layout_weight="1"
        />



  </LinearLayout>









  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="vertical">

  <androidx.recyclerview.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical"
      android:id="@+id/words_recycler"
      android:background="@color/yellow_dark"
      />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingVertical="5dp"
      android:gravity="center"
      android:background="@color/yellow_dark"
      android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/button_for_reset_all_progress"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginHorizontal="2dp"
        android:textColor="@color/black"
        android:background="@drawable/button_for_learn_background"
        android:text="@string/reset_all_progress"
        android:textSize="12sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_for_delete_word"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginHorizontal="2dp"
        android:textColor="@color/black"
        android:background="@drawable/button_for_learn_background"
        android:text="@string/delete_word"
        android:textSize="12sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_for_save_word"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
android:padding="10dp"
        android:layout_marginHorizontal="2dp"
        android:textColor="@color/black"
        android:background="@drawable/button_for_learn_background"
        android:text="@string/add_word"
        android:textSize="12sp"/>

  </LinearLayout>

</LinearLayout>