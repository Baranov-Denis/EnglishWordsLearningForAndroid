<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnActivity"
    android:id="@+id/learn_activity"
    android:background="@color/yellow_dark">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/gray_light_50"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@color/white" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/target_word"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:text="@string/target_word"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_for_learn_background"
                android:id="@+id/button_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="1dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_for_learn_background"
                android:id="@+id/button_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="1dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_for_learn_background"
                android:id="@+id/button_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="1dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_for_learn_background"
                android:id="@+id/button_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="1dp"/>



            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_for_learn_background"
                android:id="@+id/button_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="1dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_for_learn_background"
                android:id="@+id/button_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="1dp"/>



            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_for_learn_background"
                android:id="@+id/button_7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="1dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_for_learn_background"
                android:id="@+id/button_8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="1dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_for_learn_background"
                android:id="@+id/button_9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="1dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_for_learn_background"
                android:id="@+id/button_10"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="10dp"/>


        </LinearLayout>





</LinearLayout>